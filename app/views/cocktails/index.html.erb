<%= render "components/banner" %>

<h1 class="text-center">Available Cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card text-center" >
        <div class="card-body">
            <h2 class="card-name" ><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
            <%= cl_image_tag cocktail.photo, width: 400, height: 300, crop: :fill %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>
<div><p> <%= link_to "Add new cocktail", new_cocktail_path %></p></div>
